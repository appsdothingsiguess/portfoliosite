---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

interface Props {
  currentMode?: 'research' | 'business' | 'journalism' | 'aba';
}

const { currentMode = 'research' } = Astro.props;

// Fetch all skills
const allSkills = await getCollection('skills');

// Debug: Log skills data to see what we're getting
// console.log('All skills:', allSkills.map(s => ({ name: s.data.name, featured: s.data.featured, type: typeof s.data.featured })));

// Map mode to category
const modeToCategory: Record<string, string> = {
  'research': 'research',
  'aba': 'research', // ABA is also research category
  'business': 'business',
  'journalism': 'journalism',
};

const targetCategory = modeToCategory[currentMode] || 'research';

// Get all featured skills (we'll filter client-side for reactivity)
// The schema uses .default(false), so featured should always be a boolean
// But we'll be defensive and check for truthy values
const allFeaturedSkills = allSkills
  .filter(skill => {
    const featured = skill.data.featured;
    // Check if featured is explicitly true (boolean, string "true", or truthy)
    return Boolean(featured) && featured !== false && featured !== 'false';
  })
  .sort((a, b) => (a.data.order || 999) - (b.data.order || 999));

// Debug: Log featured skills
// console.log('Featured skills found:', allFeaturedSkills.length, allFeaturedSkills.map(s => s.data.name));

// Filter for initial render based on current mode
const featuredSkills = allFeaturedSkills
  .filter(skill => skill.data.category === targetCategory);
---

<section id="top-skills" class="scroll-mt-24 transition-colors duration-1000 p-4 -m-4 rounded-2xl">
  <div class="flex flex-col md:flex-row md:items-end justify-between mb-8 gap-4">
    <div>
      <h2 class="text-3xl font-serif font-bold mb-2 flex items-center gap-2">
        <i data-lucide="star" class="w-6 h-6 text-muted"></i>
        Top Skills
      </h2>
      <p class="text-muted max-w-lg">Core competencies for {currentMode === 'aba' ? 'ABA/Research' : currentMode} roles.</p>
    </div>
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" id="top-skills-grid">
    {allFeaturedSkills.length === 0 ? (
      <div class="md:col-span-3 card p-6 text-center">
        <p class="text-muted mb-2">No featured skills found.</p>
        <p class="text-sm text-muted mb-2">
          Total skills in collection: {allSkills.length}
        </p>
        <p class="text-sm text-muted">
          To add skills here, edit files in <code class="text-xs bg-surface-2 px-2 py-1 rounded">src/content/skills/*.md</code> and set <code class="text-xs bg-surface-2 px-2 py-1 rounded">featured: true</code>
        </p>
        <details class="mt-4 text-left">
          <summary class="text-xs text-muted cursor-pointer">Debug: Show all skills</summary>
          <pre class="text-xs mt-2 p-2 bg-surface-2 rounded overflow-auto">{JSON.stringify(allSkills.map(s => ({ name: s.data.name, featured: s.data.featured, category: s.data.category })), null, 2)}</pre>
        </details>
      </div>
    ) : (
      allFeaturedSkills.map((skill) => {
        const isVisible = skill.data.category === targetCategory;
        return (
          <div 
            class={`card p-6 hover:scale-[1.02] transition-all duration-200 top-skill-card ${isVisible ? '' : 'hidden'}`}
            data-category={skill.data.category}
            data-order={skill.data.order || 999}
          >
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 bg-surface-2 p-3 rounded-xl border border-border">
              <i data-lucide={skill.data.icon} class="w-6 h-6 text-[var(--text)]" aria-hidden="true"></i>
            </div>
            <div class="flex-grow min-w-0">
              <h3 class="text-lg font-serif font-bold mb-1 text-[var(--text)]">
                {skill.data.name}
              </h3>
              <p class="text-sm text-muted leading-relaxed mb-3">
                {skill.data.shortDesc}
              </p>
              <div class="flex items-center gap-2">
                <span class={`pill ${
                  skill.data.level === 'Certified' 
                    ? 'bg-yellow-50 text-yellow-800 border-yellow-200' 
                    : skill.data.level === 'Advanced'
                    ? 'bg-green-50 text-green-800 border-green-200'
                    : skill.data.level === 'Intermediate'
                    ? 'bg-blue-50 text-blue-800 border-blue-200'
                    : 'bg-gray-50 text-gray-800 border-gray-200'
                }`}>
                  <i data-lucide="check-circle" class="w-3 h-3" aria-hidden="true"></i>
                  <span>{skill.data.level}</span>
                </span>
                {skill.data.level === 'Certified' && (
                  <span class="pill bg-yellow-50 text-yellow-800 border-yellow-200">
                    <i data-lucide="award" class="w-3 h-3" aria-hidden="true"></i>
                    <span>Certified</span>
                  </span>
                )}
              </div>
            </div>
          </div>
        </div>
        );
      })
    )}
  </div>
</section>

<script is:inline>
  // Client-side mode switching for Top Skills
  (function() {
    const modeToCategory = {
      'research': 'research',
      'aba': 'research',
      'business': 'business',
      'journalism': 'journalism',
    };

    function updateTopSkills(mode) {
      const container = document.getElementById('top-skills-container');
      const grid = document.getElementById('top-skills-grid');
      const section = document.getElementById('top-skills');
      const description = section ? section.querySelector('p.text-muted') : null;
      
      if (!container || !grid || !section) return;

      const targetCategory = modeToCategory[mode] || 'research';
      const cards = grid.querySelectorAll('.top-skill-card');
      
      // Update description
      if (description) {
        const modeLabel = mode === 'aba' ? 'ABA/Research' : mode;
        description.textContent = 'Core competencies for ' + modeLabel + ' roles.';
      }

      // Show/hide cards based on category
      cards.forEach(function(card) {
        const cardCategory = card.getAttribute('data-category');
        if (cardCategory === targetCategory) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
    }

    // Wait for DOM to be ready
    function initTopSkills() {
      const container = document.getElementById('top-skills-container');
      if (container) {
        container.addEventListener('modechange', function(e) {
          updateTopSkills(e.detail.mode);
        });

        // Initial update based on data-mode
        const initialMode = container.getAttribute('data-mode') || 'research';
        updateTopSkills(initialMode);
      }
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initTopSkills);
    } else {
      initTopSkills();
    }
  })();
</script>

