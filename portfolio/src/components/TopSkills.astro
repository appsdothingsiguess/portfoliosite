---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

interface Props {
  currentMode?: 'research' | 'business' | 'journalism' | 'aba';
}

const { currentMode = 'research' } = Astro.props;

// 1. Fetch all skills
const allSkills = await getCollection('skills');

// 2. Get ALL skills with explicit modes (render all, filter client-side for reactivity)
// This allows client-side mode switching without re-rendering
const skillsWithModes = allSkills.filter((skill) => {
  return skill.data.modes && skill.data.modes.length > 0;
});

// Get skills without explicit modes (will use relational logic for initial render only)
const skillsWithoutModes = allSkills.filter(skill => !skill.data.modes || skill.data.modes.length === 0);

// For skills without modes, use relational matching for the initial currentMode
let relationallyMatched: typeof allSkills = [];
if (skillsWithoutModes.length > 0) {
    // Determine context and fetch experience documents for relational matching
    let experienceDocs: Array<CollectionEntry<'research'>> | Array<CollectionEntry<'leadership'>> | Array<CollectionEntry<'business'>> | Array<CollectionEntry<'journalism'>> = [];

    if (currentMode === 'research' || currentMode === 'aba') {
      experienceDocs = await getCollection('research');
    } else if (currentMode === 'business') {
      const leadershipDocs = await getCollection('leadership');
      const businessDocs = await getCollection('business');
      experienceDocs = [...leadershipDocs, ...businessDocs] as Array<CollectionEntry<'leadership'>>;
    } else if (currentMode === 'journalism') {
      experienceDocs = await getCollection('journalism');
    }

    const usedSkillIds = new Set<string>();
    experienceDocs.forEach((doc) => {
      if (currentMode === 'research' || currentMode === 'aba') {
        const researchDoc = doc as CollectionEntry<'research'>;
        researchDoc.data.tools?.forEach((tool) => {
          usedSkillIds.add(tool);
          const normalized = tool.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '');
          usedSkillIds.add(normalized);
        });
      } else if (currentMode === 'business') {
        if ('organization' in doc.data && 'tags' in doc.data) {
          const tags = doc.data.tags;
          tags?.forEach((tag) => {
            usedSkillIds.add(tag);
            const normalized = tag.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '');
            usedSkillIds.add(normalized);
          });
        }
      }
    });

    relationallyMatched = skillsWithoutModes.filter((skill) => {
      const skillId = skill.id;
      if (usedSkillIds.has(skillId)) return true;
      for (const usedId of usedSkillIds) {
        if (skillId.includes(usedId) || usedId.includes(skillId)) return true;
        const normalizedSkillName = skill.data.name.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '');
        if (normalizedSkillName.includes(usedId) || usedId.includes(normalizedSkillName)) return true;
      }
      return false;
    });
}

// 3. Combine all skills that should be rendered (all with modes + relationally matched for initial mode)
// Client-side script will filter by mode
const allRenderableSkills = [...skillsWithModes, ...relationallyMatched];

// 4. Sort: featured skills first, then by order
const sortedSkills = allRenderableSkills.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return (a.data.order || 999) - (b.data.order || 999);
});

---

<section id="top-skills" class="scroll-mt-24 transition-colors duration-1000 p-4 -m-4 rounded-2xl">
  <div class="flex flex-col md:flex-row md:items-end justify-between mb-8 gap-4">
    <div>
      <h2 class="text-3xl font-serif font-bold mb-2 flex items-center gap-2">
        <i data-lucide="star" class="w-6 h-6 text-muted"></i>
        Top Skills
      </h2>
      <p class="text-muted max-w-lg">
        Core competencies for {currentMode === 'aba' ? 'ABA/Research' : currentMode} roles.
      </p>
    </div>
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" id="top-skills-grid">
    {sortedSkills.length === 0 ? (
      <div class="md:col-span-3 card p-6 text-center">
        <p class="text-muted mb-2">No skills found for {currentMode} mode.</p>
        <p class="text-sm text-muted">
          Skills appear here when they are referenced in your {currentMode === 'research' || currentMode === 'aba' ? 'research' : currentMode === 'business' ? 'leadership' : 'journalism'} experience files.
        </p>
      </div>
    ) : (
      sortedSkills.map((skill) => {
        // Determine which modes this skill should appear in
        const skillModes = skill.data.modes || [];
        // Create a data attribute with all modes this skill belongs to
        const modesAttr = skillModes.join(',');
        return (
          <div 
            class="card p-6 hover:scale-[1.02] transition-all duration-200 top-skill-card"
            data-order={skill.data.order || 999}
            data-modes={modesAttr}
          >
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 bg-surface-2 p-3 rounded-xl border border-border">
                <i data-lucide={skill.data.icon} class="w-6 h-6 text-[var(--text)]" aria-hidden="true"></i>
              </div>
              <div class="flex-grow min-w-0">
                <h3 class="text-lg font-serif font-bold mb-1 text-[var(--text)]">
                  {skill.data.name}
                </h3>
                <p class="text-sm text-muted leading-relaxed mb-3">
                  {skill.data.shortDesc}
                </p>
                <div class="flex items-center gap-2">
                  <span class={`pill ${
                    skill.data.level === 'Certified' 
                      ? 'bg-yellow-50 text-yellow-800 border-yellow-200' 
                      : skill.data.level === 'Advanced'
                      ? 'bg-green-50 text-green-800 border-green-200'
                      : skill.data.level === 'Intermediate'
                      ? 'bg-blue-50 text-blue-800 border-blue-200'
                      : 'bg-gray-50 text-gray-800 border-gray-200'
                  }`}>
                    <i data-lucide="check-circle" class="w-3 h-3" aria-hidden="true"></i>
                    <span>{skill.data.level}</span>
                  </span>
                  {skill.data.featured && (
                    <span class="pill bg-yellow-50 text-yellow-800 border-yellow-200">
                      <i data-lucide="star" class="w-3 h-3" aria-hidden="true"></i>
                      <span>Featured</span>
                    </span>
                  )}
                </div>
              </div>
            </div>
          </div>
        );
      })
    )}
  </div>
</section>

<script is:inline>
  // Client-side mode switching for Top Skills
  (function() {
    function updateTopSkillsForMode(mode) {
      // #region agent log
      fetch('http://127.0.0.1:7244/ingest/a7ca4eda-4f6b-42fd-97e8-abf86a8386d5',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({location:'TopSkills:updateTopSkillsForMode',message:'Updating TopSkills for mode',data:{mode},timestamp:Date.now(),sessionId:'debug-session',runId:'run6',hypothesisId:'F'})}).catch(()=>{});
      // #endregion
      
      const grid = document.getElementById('top-skills-grid');
      const section = document.getElementById('top-skills');
      const description = section ? section.querySelector('p.text-muted') : null;
      
      if (!grid || !section) {
        // #region agent log
        fetch('http://127.0.0.1:7244/ingest/a7ca4eda-4f6b-42fd-97e8-abf86a8386d5',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({location:'TopSkills:updateTopSkillsForMode',message:'Missing elements',data:{hasGrid:!!grid,hasSection:!!section},timestamp:Date.now(),sessionId:'debug-session',runId:'run6',hypothesisId:'F'})}).catch(()=>{});
        // #endregion
        return;
      }
      
      const cards = grid.querySelectorAll('.top-skill-card');
      let visibleCount = 0;
      
      // #region agent log
      fetch('http://127.0.0.1:7244/ingest/a7ca4eda-4f6b-42fd-97e8-abf86a8386d5',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({location:'TopSkills:before-filtering',message:'Before filtering cards',data:{totalCards:cards.length,mode},timestamp:Date.now(),sessionId:'debug-session',runId:'run6',hypothesisId:'F'})}).catch(()=>{});
      // #endregion
      
      // Update description
      if (description) {
        const modeLabel = mode === 'aba' ? 'ABA/Research' : mode;
        description.textContent = 'Core competencies for ' + modeLabel + ' roles.';
      }
      
      // Show/hide cards based on modes attribute
      cards.forEach(function(card) {
        const modesAttr = card.getAttribute('data-modes');
        if (modesAttr && modesAttr.trim()) {
          const skillModes = modesAttr.split(',').map(m => m.trim()).filter(m => m);
          const shouldShow = skillModes.includes(mode);
          
          // #region agent log
          if (cards.length <= 10) { // Only log for small sets to avoid spam
            fetch('http://127.0.0.1:7244/ingest/a7ca4eda-4f6b-42fd-97e8-abf86a8386d5',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({location:'TopSkills:card-filter',message:'Filtering card',data:{modesAttr,skillModes,mode,shouldShow},timestamp:Date.now(),sessionId:'debug-session',runId:'run6',hypothesisId:'F'})}).catch(()=>{});
          }
          // #endregion
          
          if (shouldShow) {
            card.style.display = '';
            visibleCount++;
          } else {
            card.style.display = 'none';
          }
        } else {
          // Skills without modes attribute are relationally matched - hide them on mode change
          card.style.display = 'none';
        }
      });
      
      // #region agent log
      fetch('http://127.0.0.1:7244/ingest/a7ca4eda-4f6b-42fd-97e8-abf86a8386d5',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({location:'TopSkills:after-filtering',message:'After filtering cards',data:{visibleCount,totalCards:cards.length,mode},timestamp:Date.now(),sessionId:'debug-session',runId:'run6',hypothesisId:'F'})}).catch(()=>{});
      // #endregion
      
      // Show/hide empty state message
      const emptyState = grid.querySelector('.md\\:col-span-3.card.text-center');
      if (emptyState) {
        if (visibleCount === 0) {
          emptyState.style.display = '';
          const emptyText = emptyState.querySelector('p.text-muted');
          if (emptyText) {
            emptyText.textContent = 'No skills found for ' + mode + ' mode.';
          }
        } else {
          emptyState.style.display = 'none';
        }
      }
    }
    
    // Listen for mode changes from parent
    function initTopSkills() {
      const container = document.getElementById('top-skills-container');
      // #region agent log
      fetch('http://127.0.0.1:7244/ingest/a7ca4eda-4f6b-42fd-97e8-abf86a8386d5',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({location:'TopSkills:initTopSkills',message:'Initializing TopSkills',data:{hasContainer:!!container},timestamp:Date.now(),sessionId:'debug-session',runId:'run6',hypothesisId:'G'})}).catch(()=>{});
      // #endregion
      
      if (container) {
        // Listen for modechange events
        container.addEventListener('modechange', function(e) {
          // #region agent log
          fetch('http://127.0.0.1:7244/ingest/a7ca4eda-4f6b-42fd-97e8-abf86a8386d5',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({location:'TopSkills:modechange-event',message:'Modechange event received',data:{mode:e.detail.mode},timestamp:Date.now(),sessionId:'debug-session',runId:'run6',hypothesisId:'G'})}).catch(()=>{});
          // #endregion
          updateTopSkillsForMode(e.detail.mode);
        });
        
        // Initial update based on data-mode attribute
        const initialMode = container.getAttribute('data-mode') || 'aba';
        // #region agent log
        fetch('http://127.0.0.1:7244/ingest/a7ca4eda-4f6b-42fd-97e8-abf86a8386d5',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({location:'TopSkills:initial-mode',message:'Setting initial mode',data:{initialMode},timestamp:Date.now(),sessionId:'debug-session',runId:'run6',hypothesisId:'G'})}).catch(()=>{});
        // #endregion
        
        // Set initial visibility - skills matching current mode are visible, others hidden
        const grid = document.getElementById('top-skills-grid');
        if (grid) {
          const cards = grid.querySelectorAll('.top-skill-card');
          cards.forEach(function(card) {
            const modesAttr = card.getAttribute('data-modes');
            if (modesAttr && modesAttr.trim()) {
              const skillModes = modesAttr.split(',').map(m => m.trim()).filter(m => m);
              if (!skillModes.includes(initialMode)) {
                card.style.display = 'none';
              }
            }
          });
        }
        updateTopSkillsForMode(initialMode);
      }
    }
    
    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initTopSkills);
    } else {
      // Wait a bit to ensure container exists
      setTimeout(initTopSkills, 50);
    }
  })();
</script>
