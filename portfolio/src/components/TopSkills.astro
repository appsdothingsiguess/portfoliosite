---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

interface Props {
  currentMode?: 'research' | 'business' | 'journalism' | 'aba';
}

const { currentMode = 'research' } = Astro.props;

// Hardcoded mapping of mode -> skill names (exactly 5 skills per mode)
const topSkillsByMode: Record<string, string[]> = {
  'aba': ['Data Collection', 'Clinical Research', 'Psychology Education', 'Operational Discipline', 'Collaborative Problem Solving'],
  'research': ['SPSS Analysis', 'E-Prime Design', 'JASP', 'IRB Compliance', 'Experimental Research'],
  'business': ['Budget / P&L', 'Sales Management', 'Supply Chain', 'E-Commerce', 'Hiring & Mgmt'],
  'journalism': ['AP Style', 'Investigative Reporting', 'Technical Writing', 'Analytical Writing', 'WordPress']
};

// 1. Fetch all skills
const allSkills = await getCollection('skills');

// 2. Get the 5 skills for the current mode (render all modes for client-side switching)
// Create a map of all skills by name for quick lookup
const skillsByName = new Map<string, typeof allSkills[0]>();
allSkills.forEach(skill => {
  skillsByName.set(skill.data.name, skill);
});

// 3. Build renderable skills: include all skills from all modes (for client-side filtering)
const allRenderableSkills: typeof allSkills = [];
const modeToSkillsMap: Record<string, typeof allSkills> = {};

// For each mode, get the corresponding skills
Object.entries(topSkillsByMode).forEach(([mode, skillNames]) => {
  const modeSkills: typeof allSkills = [];
  skillNames.forEach(skillName => {
    const skill = skillsByName.get(skillName);
    if (skill) {
      modeSkills.push(skill);
      // Add to allRenderableSkills if not already added
      if (!allRenderableSkills.find(s => s.id === skill.id)) {
        allRenderableSkills.push(skill);
      }
    }
  });
  modeToSkillsMap[mode] = modeSkills;
});

// 4. Sort: maintain order as defined in topSkillsByMode
const sortedSkills = allRenderableSkills.sort((a, b) => {
  // Get the order from the mode arrays
  const getOrder = (skill: typeof allSkills[0], mode: string): number => {
    const skillNames = topSkillsByMode[mode] || [];
    const index = skillNames.indexOf(skill.data.name);
    return index >= 0 ? index : 999;
  };
  
  // For current mode, use its order; otherwise use first mode that contains the skill
  const aOrder = getOrder(a, currentMode);
  const bOrder = getOrder(b, currentMode);
  return aOrder - bOrder;
});

// Serialize topSkillsByMode for client-side script
const topSkillsByModeJson = JSON.stringify(topSkillsByMode);

---

<section id="top-skills" class="scroll-mt-24 transition-colors duration-1000 p-4 -m-4 rounded-2xl">
  <div class="flex flex-col md:flex-row md:items-end justify-between mb-8 gap-4">
    <div>
      <h2 class="text-3xl font-serif font-bold mb-2 flex items-center gap-2">
        <i data-lucide="star" class="w-6 h-6 text-muted"></i>
        Top Skills
      </h2>
      <p class="text-muted max-w-lg">
        Core competencies for {currentMode === 'aba' ? 'ABA/Research' : currentMode} roles.
      </p>
    </div>
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" id="top-skills-grid">
    {sortedSkills.length === 0 ? (
      <div class="md:col-span-3 card p-6 text-center">
        <p class="text-muted mb-2">No skills found for {currentMode} mode.</p>
        <p class="text-sm text-muted">
          Skills appear here when they are referenced in your {currentMode === 'research' || currentMode === 'aba' ? 'research' : currentMode === 'business' ? 'leadership' : 'journalism'} experience files.
        </p>
      </div>
    ) : (
      sortedSkills.map((skill) => {
        // Determine which modes this skill should appear in (from hardcoded mapping)
        const skillModes: string[] = [];
        Object.entries(topSkillsByMode).forEach(([mode, skillNames]) => {
          if (skillNames.includes(skill.data.name)) {
            skillModes.push(mode);
          }
        });
        // Create a data attribute with all modes this skill belongs to
        const modesAttr = skillModes.join(',');
        return (
          <div 
            class="card p-6 hover:scale-[1.02] transition-all duration-200 top-skill-card"
            data-order={skill.data.order || 999}
            data-modes={modesAttr}
            data-skill-name={skill.data.name}
          >
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 bg-surface-2 p-3 rounded-xl border border-border">
                <i data-lucide={skill.data.icon} class="w-6 h-6 text-[var(--text)]" aria-hidden="true"></i>
              </div>
              <div class="flex-grow min-w-0">
                <h3 class="text-lg font-serif font-bold mb-1 text-[var(--text)]">
                  {skill.data.name}
                </h3>
                <p class="text-sm text-muted leading-relaxed mb-3">
                  {skill.data.shortDesc}
                </p>
                <div class="flex items-center gap-2">
                  <span class={`pill ${
                    skill.data.level === 'Certified' 
                      ? 'bg-yellow-50 text-yellow-800 border-yellow-200' 
                      : skill.data.level === 'Advanced'
                      ? 'bg-green-50 text-green-800 border-green-200'
                      : skill.data.level === 'Intermediate'
                      ? 'bg-blue-50 text-blue-800 border-blue-200'
                      : 'bg-gray-50 text-gray-800 border-gray-200'
                  }`}>
                    <i data-lucide="check-circle" class="w-3 h-3" aria-hidden="true"></i>
                    <span>{skill.data.level}</span>
                  </span>
                  {skill.data.featured && (
                    <span class="pill bg-yellow-50 text-yellow-800 border-yellow-200">
                      <i data-lucide="star" class="w-3 h-3" aria-hidden="true"></i>
                      <span>Featured</span>
                    </span>
                  )}
                </div>
              </div>
            </div>
          </div>
        );
      })
    )}
  </div>
</section>

<script is:inline define:vars={{topSkillsByModeJson}}>
  // Client-side mode switching for Top Skills
  (function() {
    // Hardcoded mapping (same as server-side)
    const topSkillsMap = JSON.parse(topSkillsByModeJson);
    
    function updateTopSkillsForMode(mode) {
      const grid = document.getElementById('top-skills-grid');
      const section = document.getElementById('top-skills');
      const description = section?.querySelector('p.text-muted');
      
      if (!grid || !section) return;
      
      const cards = grid.querySelectorAll('.top-skill-card');
      let visibleCount = 0;
      
      // Get the 5 skills for this mode
      const modeSkillNames = topSkillsMap[mode] || [];
      
      // Update description
      if (description) {
        const modeLabel = mode === 'aba' ? 'ABA/Research' : mode;
        description.textContent = 'Core competencies for ' + modeLabel + ' roles.';
      }
      
      // Show/hide cards based on whether they're in the mode's skill list
      cards.forEach(function(card) {
        const skillName = card.getAttribute('data-skill-name');
        const shouldShow = skillName && modeSkillNames.includes(skillName);
        
        if (shouldShow) {
          card.style.display = '';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });
      
      // Show/hide empty state message
      const emptyState = grid.querySelector('.md\\:col-span-3.card.text-center');
      if (emptyState) {
        if (visibleCount === 0) {
          emptyState.style.display = '';
          // Update empty state message
          const emptyText = emptyState.querySelector('p.text-muted');
          if (emptyText) {
            emptyText.textContent = 'No skills found for ' + mode + ' mode.';
          }
        } else {
          emptyState.style.display = 'none';
        }
      }
    }
    
    // Listen for mode changes from parent
    function initTopSkills() {
      const container = document.getElementById('top-skills-container');
      if (container) {
        // Listen for modechange events
        container.addEventListener('modechange', function(e) {
          updateTopSkillsForMode(e.detail.mode);
        });
        
        // Initial update based on data-mode attribute
        const initialMode = container.getAttribute('data-mode') || 'aba';
        updateTopSkillsForMode(initialMode);
      }
    }
    
    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initTopSkills);
    } else {
      initTopSkills();
    }
  })();
</script>
